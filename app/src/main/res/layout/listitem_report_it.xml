<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/report_issue_layout"
    style="@style/list_item_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/report_issue_card_view"
        style="@style/list_item_card_view"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="15dp">

        <RelativeLayout
            android:id="@+id/report_issue_card_view_content"
            style="@style/match_parents">

            <ImageView
                style="@style/list_item_side_image_view"
                android:id="@+id/report_issue_icon"
                android:contentDescription="@string/report_issue_icon_description"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/report_issue_title"
                android:layout_toRightOf="@id/report_issue_icon"
                android:layout_toEndOf="@id/report_issue_icon"
                style="@style/text_view"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/report_issue_description"
                style="@style/text_view"
                android:layout_below="@id/report_issue_title"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/report_issue_icon"
                android:layout_toRightOf="@id/report_issue_icon"
                android:textSize="15sp" />

            <Button
                android:id="@+id/report_issue_button"
                style="@style/match_parent_width"
                android:text="@string/view"
                android:background="@drawable/rounded_bottom_button"
                android:theme="@style/PrimaryFlatButton"
                android:layout_below="@id/report_issue_icon" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>